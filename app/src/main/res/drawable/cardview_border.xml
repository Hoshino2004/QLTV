<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Viền ngoài -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="2dp"
                android:color="@color/black" /> <!-- Màu viền -->
            <corners android:radius="30dp" /> <!-- Bo tròn viền -->
        </shape>
    </item>
    <!-- Màu nền của CardView -->
    <item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Màu nền bên trong -->
            <corners android:radius="12dp" /> <!-- Bo tròn bên trong -->
        </shape>
    </item>
</layer-list>


